# Tasks
@hostname = http://localhost
@port = 3001
@host = {{hostname}}:{{port}}
@parentPath = api/tasks
@filtresPath = api/tasks?sortDirection=desc&categories=1&tags=1&limit=2&page=1
@taskId = 1
@deleteTaskId = 2
@contentType = application/json

# Create a new task
POST {{host}}/{{parentPath}}/ HTTP/1.1
Content-Type: {{contentType}}

{
  "title": "Новаое задание",
  "description": "Починить кран",
  "price": 100,
  "image": "https://images/picture.jpeg",
  "address": "Задний проход",
  "tags": [0],
  "city": "Москва",
  "categories": [1],
  "responses": [1],
  "comments": [1],
  "status": "New",
  "userId": "25"
}

###

# Get task by ID
GET {{host}}/{{parentPath}}/{{taskId}} HTTP/1.1

###

# Delete task by id
DELETE  {{host}}/{{parentPath}}/{{deleteTaskId}} HTTP/1.1
Content-Type: {{contentType}}

###

# Get all tasks
GET {{host}}/{{parentPath}}/ HTTP/1.1

###

# Get all tasks and filtres
GET {{host}}/{{filtresPath}}/ HTTP/1.1

###

# Update task
PATCH {{host}}/{{parentPath}}/{{taskId}} HTTP/1.1
Content-Type: application/json

{
  "title": "Старое задание"
}

